{% extends '@theme/base.html.twig' %}

{% block title %}{{ comic.name }}{% endblock %}

{% block body %}
                    <div class="col">
                        <div class="row mb-3">
                            <div class="col text-center">
                                <img class="img-fluid" src="{{ comic.currentPage.getPageLink }}" alt="{{ comic.currentpage.title }}">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col text-center">
                                <div class="btn-group">
                                    <a href="/@{{ comic.slug }}/page/{{ navigation.first.slug }}" class="btn btn-light"><i class="fas fa-backward-fast fa-2x"></i></a>
                                    {% if navigation.chapterStart is not empty %}
                                        <a href="/@{{ comic.slug }}/page/{{ navigation.chapterStart.slug }}" class="btn btn-light"><i class="fas fa-backward fa-2x"></i></a>
                                    {% endif %}
                                    <a href="/@{{ comic.slug }}/page/{{ navigation.prev.slug }}" class="btn btn-light"><i class="fas fa-backward-step fa-2x"></i></a>
                                    <a href="/@{{ comic.slug }}/archive" class="btn btn-light"><i class="fas fa-box-archive fa-2x"></i></a>
                                    <a href="/@{{ comic.slug }}/page/{{ navigation.next.slug }}" class="btn btn-light"><i class="fas fa-forward-step fa-2x"></i></a>
                                    {% if navigation.nextChapter is not empty %}
                                        <a href="/@{{ comic.slug }}/page/{{ navigation.nextChapter.slug }}" class="btn btn-light"><i class="fas fa-forward fa-2x"></i></a>
                                    {% endif %}
                                    <a href="/@{{ comic.slug }}" class="btn btn-light"><i class="fas fa-forward-fast fa-2x"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col me-3">
                                {% if comic.layout.showinfo %}
                                    <div class="row mb-3">
                                        <div class="col bord">
                                            {{ comic.currentPage.info|raw }}
                                        </div>
                                    </div>
                                {% endif %}
                                {% if comic.layout.showtranscript %}
                                    <div class="row mb-3">
                                        <div class="col bord">
                                            {{ comic.currentPage.transcript|raw }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                            {% if comic.layout.showcast %}
                                <div class="col-3 bord">
                                    {% for cast in comic.currentPage.casts %}
                                        <div class="row my-3">
                                            <div class="col-4"><img class='img-icon img-fluid' src='/castimage/{{ comic.slug }}/{{ cast.image }}' alt='{{ cast.name }}'></div>
                                            <div class="col">{{ cast.name }}</div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                        {% if comic.layout.showcomments %}
                            <div class="row mb-3">
                                <div class="col bord">
                                    Comments go here
                                </div>
                            </div>
                        {% endif %}
                    </div>
{% endblock %}
