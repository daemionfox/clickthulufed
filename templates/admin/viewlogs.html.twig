{% extends 'base.html.twig' %}

{% block title %}Server Logs{% endblock %}

{% block body %}
    <div class="container">
        <div class="card col p-3 mt-5 panel" id="c4-comic-admin">
            <div class="row mb-3">
                <div class="col">
                    <h1>Server Logs</h1>
                </div>
            </div>
            {% for log in logs %}
                <div class="row server-log mb-2">
                    <div class="col-3">
                        <div class="row">
                            <div class="col"><b>Date:</b></div>
                            <div class="col">{{ log.createdon|date("Y-m-d H:i:s") }}</div>
                        </div>
                        <div class="row">
                            <div class="col"><b>Level:</b></div>
                            <div class="col">{{ log.level|upper }}</div>
                        </div>
                        <div class="row">
                            <div class="col"><b>Route:</b></div>
                            <div class="col">{{ log.Route }}</div>
                        </div>
                    </div>
                    <div class="col-9">
                        {% if log.type == 'json' %}
                            <pre>{{ log.display }}</pre>
                        {% else %}
                            {{ log.display }}
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}


{% block sidebar %}
    {% include "common/user-sidebar.html.twig" %}
{% endblock %}

